{
    "workbench.settings.applyToAllProfiles": [],
    "editor.minimap.enabled": false,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "csv.separator": ";",
    "ltex.additionalRules.motherTongue": "de-DE",
    "ltex.language": "en-GB",
    "ltex.latex.commands": {
        "\\\\cite{}": "ignore",
        "\\\\ref{}": "ignore",
        "\\\\documentclass[]{}": "ignore",
        "\\\\cite[]{}": "ignore",
        "\\\\end{}": "ignore"
    },
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex -> makeglossaries -> biber -> xelatex*2",
            "tools": ["xelatex", "makeglossaries", "biber", "xelatex", "xelatex"]
        },
        {
            "name": "latexmk",
            "tools": ["latexmk"]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": ["latexmk_rconly"]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": ["lualatexmk"]
        },
        {
            "name": "latexmk (xelatex)",
            "tools": ["xelatexmk"]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex * 2",
            "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
        },
        {
            "name": "Compile Rnw files",
            "tools": ["rnw2tex", "latexmk"]
        },
        {
            "name": "Compile Jnw files",
            "tools": ["jnw2tex", "latexmk"]
        },
        {
            "name": "Compile Pnw files",
            "tools": ["pnw2tex", "latexmk"]
        },
        {
            "name": "tectonic",
            "tools": ["tectonic"]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": ["-synctex=1", "-interaction=nonstopmode", "-file-line-error", "%DOCFILE%"]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": ["%DOCFILE%"]
        },
        {
            "name": "makeglossaries",
            "command": "makeglossaries",
            "args": ["%DOCFILE%"]
        },
        {
            "name": "xelatexmk",
            "command": "latexmk",
            "args": ["-xelatex", "-synctex=1", "-interaction=nonstopmode", "-file-line-error", "%DOC%"]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": ["-pdf", "-synctex=1", "-interaction=nonstopmode", "-file-line-error", "%DOC%"]
        },
        {
            "name": "latexmk_rconly",
            "command": "latexmk",
            "args": ["%DOC%"]
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": ["-lualatex", "-synctex=1", "-interaction=nonstopmode", "-file-line-error", "%DOC%"]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": ["-synctex=1", "-interaction=nonstopmode", "-file-line-error", "%DOCFILE%"]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": ["%DOCFILE%"]
        },
        {
            "name": "rnw2tex",
            "command": "Rscript",
            "args": ["-e", "knitr::knit('%DOCFILE%', '%DOCFILE%.tex')"]
        },
        {
            "name": "jnw2tex",
            "command": "julia",
            "args": ["-e", "using Weave; weave(\"%DOCFILE%\", doctype=\"tex\")"]
        },
        {
            "name": "pnw2tex",
            "command": "python",
            "args": ["-m", "pweave", "%DOCFILE%", "-f", "tex"]
        },
        {
            "name": "tectonic",
            "command": "tectonic",
            "args": ["%DOCFILE%"]
        }
    ],
    "ltex.enabledRules": {},
    "latex-workshop.intellisense.biblatexJSON.replace": {},
    "latex-workshop.latex.autoBuild.run": "onFileChange",
    "latex-workshop.latex.watch.files.ignore": [
        "**/*.aux",
        "**/*.bbl",
        "**/*.bcf",
        "**/*.blg",
        "**/*.fdb_latexmk",
        "**/*.fls",
        "**/*.idx",
        "**/*.ilg",
        "**/*.ind",
        "**/*.lof",
        "**/*.log",
        "**/*.lot",
        "**/*.out",
        "**/*.toc",
        "**/*.synctex.gz"
    ]
}
